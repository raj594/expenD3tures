{{> layout}}

<div class="container">
<h3>Please register using the form below</h3>

<div class="row">
<form action="/my-handling-form-page" class="create-form" method="post">
    <div class="input-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="input-group">
        <label for="mail">E-mail:</label>
        <input type="email" class="form-control" id="mail" name="user_mail">
    </div>
    <div class="input-group">
        <label for="uname">Username:</label>
        <input type="text" class="form-control" id="uname" name="user_name">
    </div>
    <div class="input-group">
        <label for="msg">Password:</label>
        <input type="password" class="form-control" id="passowrd" name="password"></input>
    </div>
    <button type="submit" class="btn btn-primary" value="register">Submit</button>

</form>
</div>
</div>